<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
 <servlet>
        <servlet-name>Accueil</servlet-name>
        <servlet-class>com.miage.servlets.Accueil</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Index</servlet-name>
        <servlet-class>com.miage.servlets.Index</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Enregistrement</servlet-name>
        <servlet-class>com.miage.servlets.Enregistrement</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Enregistrement</servlet-name>
        <url-pattern>/Enregistrement</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>Reservation</servlet-name>
        <servlet-class>com.miage.servlets.Reservation</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Annulation</servlet-name>
        <servlet-class>com.miage.servlets.Annulation</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Accueil</servlet-name>
        <url-pattern>/Accueil</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Index</servlet-name>
        <url-pattern>/Index</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Reservation</servlet-name>
        <url-pattern>/Reservation</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Annulation</servlet-name>
        <url-pattern>/Annulation</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
